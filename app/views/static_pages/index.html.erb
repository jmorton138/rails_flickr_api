<%= form_with(url: "/", method: "get") do |form| %>
    <%= form.text_field :user_id, placeholder: "User ID", required: true %>
    <%= submit_tag("Submit") %>
<% end %>

<% if @photos %>
    <% @photos.each do |photo| %>
        <%= image_tag("http://farm#{photo.farm}.staticflickr.com/#{photo.server}/#{photo.id}_#{photo.secret}.jpg") %>
    <% end %>
<% end %>